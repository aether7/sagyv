@font-face
    font-family 'icomoon'
    src url('../fonts/icomoon.eot?-a0qoia')
    src url('../fonts/icomoon.eot?#iefix-a0qoia') format('embedded-opentype'),
    url('../fonts/icomoon.woff?-a0qoia') format('woff'),
    url('../fonts/icomoon.ttf?-a0qoia') format('truetype'),
    url('../fonts/icomoon.svg?-a0qoia#icomoon') format('svg')
    font-weight normal
    font-style normal

morado = #835c94

@import "util.styl"

body
    font-family 'Verdana','Sans-serif'
    font-size 16px

nav
    .container-fluid
        .nav.navbar-nav
            li:last-child
                a
                    display inline-block

#login
    background #fafafa
    margin auto
    padding 3em
    width 50%

    #mensaje
        padding 0.5em

    div:last-child
        padding 1em 0

#main_content
    clear both

#modal_ver
    .form-group
        margin 0
        padding 0 0.5em

        .control-label,
        .form-control-static
            border 1px solid #e6e6e6
            display inline-block
            height 40px
            padding 0.5em
            vertical-align top

        .control-label
            background #f0f0f0
            width 40%

        .form-control-static
            width 57%

.panel-liquidacion
    .panel-busqueda
    .panel-cabecera
    .panel-detalle
        padding 2em 1em

    .panel-cabecera
        margin 0 1em

        div
            padding 1em

            label
                text-align right
                width 100px

    .table
        .fila-desglose
            td
                text-align right

    .totales
        text-align right

        span
            @extends .box
            text-align right

        span:nth-child(1)
            width 200px

#my_tab
    margin 2em 0

.btn-accion
    margin 1em

.btn-productos
    height 71px
    position relative

    .btn-agregar
        bottom 11px
        position absolute

.logo-index
    float left

.modal
    .modal-dialog
        .modal-content
            .modal-header
                background-color morado
                color white

            .modal-body
                .col-ajustada
                    height 61px
                    position relative

                    button
                        bottom 0
                        position absolute
