body
    font-size 16px

#login
    background #fafafa
    margin auto
    padding 3em
    width 50%

    #mensaje
        padding 0.5em

    div:last-child
        padding 1em 0

#main_content
    clear both

#modal_ver
    .form-group
        box-shadow 0px 3px 3px #999
        padding 0.5em

        .control-label,
        .form-control-static
            border 1px solid #e6e6e6
            height 40px
            padding 0.5em

        .control-label
            background #f0f0f0
            width 200px

        .form-control-static
            font-weight 700
            width 100%


#my_tab
    margin 2em 0

.auto-margin
    margin auto

.box
    box-sizing border-box
    display inline-block
    vertical-align top

.block
    display block

.center
    text-align center

.logo-index
    float left

for num in (5..95)
    s(".w%s{width:%s%}", num, num)
